@{
    ViewData["Title"] = "ログイン";
    var returnUrl = ViewData["ReturnUrl"] as string;
}
<h2>ログイン</h2>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="userId">ユーザーID</label>
        <input type="text" class="form-control" id="userId" name="userId" required autofocus />
    </div>
    <div class="form-group">
        <label for="password">パスワード</label>
        <input type="password" class="form-control" id="password" name="password" required />
    </div>
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <button type="submit" class="btn btn-primary mt-3">ログイン</button>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mt-2">@ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage</div>
    }
</form> 